# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
OWNER_DISCORD_ID=your_discord_user_id_here

# Optional: Deploy commands to a specific guild for faster testing (commands appear instantly)
# Leave commented out for global deployment (takes up to 1 hour)
# DISCORD_GUILD_ID=your_test_server_id

# Firebase Configuration
# Get these values from your Firebase service account JSON file
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Alternative: Base64-encoded service account JSON (use instead of individual Firebase vars)
# FIREBASE_SERVICE_ACCOUNT=base64_encoded_service_account_json

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Whop Integration (for subscription management)
WHOP_APP_ID=your_whop_app_id_here
WHOP_API_KEY=your_whop_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development
