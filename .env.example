# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Whop Subscription Platform
WHOP_API_KEY=your_whop_api_key_here
WHOP_PRODUCT_ID=your_whop_product_id_here
WHOP_CHECKOUT_URL=https://whop.com/your-product-checkout-url
DASHBOARD_URL=https://your-dashboard-url.com/dashboard

# Firebase/Firestore Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com

# Alternative: Single JSON credential (escape newlines with \\n)
# SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Or use service account file path (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# For local development only
FIRESTORE_EMULATOR_HOST=localhost:8080

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
PORT=3000
FREE_TIER_MESSAGE_LIMIT=100

# CORS Configuration (comma-separated Firebase Hosting URLs)
ALLOWED_ORIGINS=https://your-project.web.app,https://your-project.firebaseapp.com
