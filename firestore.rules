rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Guild configurations
    match /guilds/{guildId} {
      allow read: if true;
      allow write: if isAuthenticated();
      
      // Nested collections
      match /usage/{document=**} {
        allow read, write: if isAuthenticated();
      }
    }

    match /guildConfigs/{guildId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Knowledge base documents (kbs collection)
    match /kbs/{kbId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /knowledge_base/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /knowledge/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /ingestions/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Usage tracking
    match /usage/{userId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /usageMetrics/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Trend logs (trends collection)
    match /trends/{trendId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /trendLogs/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Moderation logs
    match /moderationLogs/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // User data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Analytics
    match /analytics/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
